  name = Oscar Benedito
[alias]
  a = add
  addurl = remote set-url --add origin
  b = branch
  ba = branch -a
  c = commit
  cm = commit -m
  co = checkout
  d = diff
  dc = diff --cached
  l = log
  lp = log --graph --pretty=format:'%Cred%h%Creset %Cblue%an%Creset: %s%Creset%C(yellow)%d%Creset %Cgreen(%cr)%Creset' --abbrev-commit --date=relative
  pl = pull
  ps = push origin HEAD
  psf = push --force
  s = status --short
  sh = stash
  shallow = clone --depth 1 --shallow-submodules --recurse-submodules
  shp = stash pop
  st = status
  vd = difftool --tool=vimdiff --no-prompt
  vdc = difftool --tool=vimdiff --no-prompt --cached
