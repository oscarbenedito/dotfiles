{{ $computer := promptString "Which computer do you want to set up" -}}
[data]
  computer = "{{ $computer }}"
  pgpkey = {{ eq $computer "gray" }}
  website = {{ eq $computer "gray" }}
  chezmoi_location = "{{ if eq $computer "gray" }}/bin/chezmoi{{ end }}"
{{- if eq $computer "gray" }}
  [data.backup]
    backup_exclude = ["/.*"]
    small_backup_exclude = ["/USB", "/Git/backup"]
    backup_dir = "BACKUP_GRAY"
{{- else }}
  backup = false
{{- end }}
