separator_block_width=30
markup=pango

[disk]
command=$HOME/.config/i3blocks/bin/disk
interval=30

[updates]
command=$HOME/.config/i3blocks/bin/apt-updates
interval=3600

[backlight]
command=$HOME/.config/i3blocks/bin/backlight
interval=once
signal=2

[volume]
command=$HOME/.config/i3blocks/bin/volume-pulseaudio
interval=once
signal=1

[battery]
command=$HOME/.config/i3blocks/bin/battery2
interval=30

[datetime]
command=date +"%a %d %b, %H:%M"
interval=5
