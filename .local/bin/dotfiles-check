#!/usr/bin/env sh

ndf=""

for f in $(ls -A "$HOME" | grep "^\."); do
  case $f in
    .cache|.config|.gnupg|.local|.mozilla|.pki|.ssh|.profile) continue ;;
    *) [ -z "$ndf" ] && ndf="$f" || ndf="$ndf, $f" ;;
  esac
done

[ -n "$ndf" ] && echo "New dotfiles: $ndf" || echo "All dotfiles in order."
